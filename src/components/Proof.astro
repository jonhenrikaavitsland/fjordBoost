---
const logos = [
  'TechFlow',
  'Nordic Retail',
  'Creative Co',
  'StartupXYZ',
  'GlobalTech',
  'InnovateLab',
];
---

<div class='bg-accent text-secondary'>
  <section class='lg:container lg:mx-auto py-20 px-5'>
    <div class='text-center flex flex-col gap-4'>
      <h2 class='uppercase text-sm font-semibold text-secondary/40'>
        trusted by leading companies
      </h2>
      <div
        class='grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-8 text-lg font-semibold text-secondary/40'
      >
        {
          logos.map((logo) => (
            <span class='hover:text-secondary/60'>{logo}</span>
          ))
        }
      </div>
    </div>
    <div></div>
    <div></div>
  </section>
</div>
