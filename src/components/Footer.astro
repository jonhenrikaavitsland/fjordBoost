const socialLinks = [
  {
    icon: '/images/icons/facebook.svg',
    href: '#',
    label: 'Facebook',
  },
  { icon: '/images/icons/x.svg', href: '#', label: 'Twitter' },
  {
    icon: '/images/icons/linkedin.svg',
