  services: [
    { label: 'Keyword Research', href: '#' },
    { label: 'On-Page SEO', href: '#' },
    { label: 'Technical SEO', href: '#' },
    { label: 'Local SEO', href: '#' },
    { label: 'Content Marketing', href: '#' },
  ],
  company: [
    { label: 'About Us', href: '#' },
    { label: 'Our Team', href: '#' },
    { label: 'Careers', href: '#' },
    { label: 'Contact', href: '#contact' },
    { label: 'Blog', href: '#' },
  ],
  resources: [
    { label: 'SEO Guide', href: '#' },
    { label: 'Case Studies', href: '#' },
    { label: 'Free Tools', href: '#' },
    { label: 'Webinars', href: '#' },
    { label: 'Support', href: '#' },
