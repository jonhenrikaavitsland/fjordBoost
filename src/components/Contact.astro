---
import ContactForm from './ContactForm';

const contactInfo = [
  {
    icon: '/images/icons/mail-dark.svg',
    title: 'Direct email support',
    content: 'hello@fjordboost.com',
    link: 'mailto:hello@fjordboost.com',
  },
  {
    icon: '/images/icons/phone.svg',
    title: 'Speak directly with our team',
    content: '+47 12345678',
    link: 'tel:+4712345678',
  },
  {
    icon: '/images/icons/location.svg',
    title: 'Address Head Office',
    content: 'SEO Street 123, 0001 Oslo, Norway',
    link: '#',
  },
  {
    icon: '/images/icons/clock.svg',
    title: 'Dedicated support during Norwegian business hours',
    content: 'Mon-Fri: 9AM-6PM CET',
    link: '#',
  },
];
---

<div class='bg-white text-secondary' id='contact' tabindex='-1'>
  <section
    class='flex flex-col gap-16 lg:container lg:mx-auto py-16 md:py-24 lg:py-32 px-5'
  >
    <div class='flex flex-col gap-4 text-center'>
      <h2 class='capitalize text-3xl md:text-4xl font-bold'>
        book your free <span class='uppercase'>seo</span> consultation
        <span class='lowercase'>in</span> norway
      </h2>
      <p class='text-lg max-w-2xl mx-auto'>
        Ready to unlock growth? FjordBoost’s experts are here to
        discuss your <span class='uppercase'>seo</span> goals and digital
        optimisation needs. Together, we’ll create a tailored strategy
        that drives measurable results, higher rankings, and lasting
        success
      </p>
    </div>
    <div class='grid md:grid-cols-2 gap-12'>
      <ContactForm client:visible />
      <section class='flex flex-col gap-8 flex-grow-1'>
        <div class='flex flex-col gap-4'>
          <h3 class='capitalize text-xl font-semibold'>
            Connect <span class='lowercase'>with</span> Norway’s <span
              class='uppercase'>seo</span
            >
            & Digital Optimisation Experts
          </h3>
          <p>
            Whether you need local <span class='uppercase'>seo</span
            > expertise, technical optimisation, or a full growth strategy,
            FjordBoost is here to help. Get in touch with our team today
            and start building measurable digital success
          </p>
        </div>
        <div class='flex flex-col gap-4'>
          {
            contactInfo.map((info) => (
              <div class='flex border border-accent/60 p-6 items-center gap-4 rounded-lg hover:shadow-md transition-shadow'>
                <div class='w-10 h-10 flex items-center justify-center rounded-lg bg-neutral'>
                  <img
                    src={info.icon}
                    alt=''
                    class='h-5 w-5 icon'
                  />
                </div>
                <div class='flex flex-col'>
                  <h4 class='font-semibold'>{info.title}</h4>
                  {info.link && info.link !== '#' ? (
                    <a
                      href={info.link}
                      class='hover:text-blue-600 transition-colors'
                    >
                      {info.content}
                    </a>
                  ) : (
                    <p>{info.content}</p>
                  )}
                </div>
              </div>
            ))
          }
        </div>
      </section>
    </div>
  </section>
</div>
